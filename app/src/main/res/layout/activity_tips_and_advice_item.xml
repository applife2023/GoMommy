<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="10dp"
    >

    <ImageView
        android:layout_width="397dp"
        android:layout_height="138dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/layout_bg_wgradient"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tipsItemTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Finding Out Your Pregnant"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tipsItemDescTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:text="What Happens and things to think about
                when you're first pregnant"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/tipsItemSourceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="https://samplelinkforpregancy.com"
            android:textColor="@color/dark_gray"
            android:textSize="13sp"/>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>