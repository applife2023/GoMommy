<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BirthYearPicker">

  <Button
      android:id="@+id/btnSelectYear"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@drawable/gradient_bg"
      android:text="@string/next_birth_year"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/npYear"
      app:layout_constraintVertical_bias="1.0" />

  <NumberPicker
      android:id="@+id/npYear"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tvSelectedYear"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Selected Year: "
      app:layout_constraintBottom_toTopOf="@+id/npYear"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>